{
  "manifest_version": 3,
  "name": "New Tab Random Quote",
  "version": "3.0.0",
  "description": "Transform your new tab with inspiring quotes â€” ability to add custom quotes on your own, and AirTable integration.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "author": "Gabriel Krieshok",
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://api.airtable.com/*"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["quotes/*.json", "fonts/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Quote Settings",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  }
}